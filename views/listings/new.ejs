<% layout("/layouts/boilerplate.ejs") %>
    <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Create New Listing</h3>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" placeholder="Title" class="form-control" required>
                    <div class="valid-feedback">Title looks Good!</div>
                    <div class="invalid-feedback">Please enter a Title.</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Description" class="form-control" required></textarea>
                    <div class="valid-feedback">Description is Fine!</div>
                    <div class="invalid-feedback">Please enter a Description.</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" name="listing[image]" class="form-control" required>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="text" name="listing[price]" placeholder="Price" class="form-control" required>
                        <div class="valid-feedback">Price is Great!</div>
                        <div class="invalid-feedback">Please enter a Valid Price.</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" placeholder="Country" class="form-control" required>
                        <div class="valid-feedback">Country Selected!</div>
                        <div class="invalid-feedback">Please enter a Valid Country.</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" placeholder="Location" class="form-control" required>
                    <div class="valid-feedback">Great Location!</div>
                    <div class="invalid-feedback">Please enter a Valid Location.</div>
                </div>
                <button type="submit" class="btn btn-primary add-btn mt-3">Create Listing</button>
            </div>
        </div>
    </form>